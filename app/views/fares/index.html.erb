<%- model_class = Fare -%>
<div class="page-header">
  <h1> Tarifas </h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th> Tipo de tarifa </th>
      <th> Precio </th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @fares.each do |fare| %>
      <tr>
        <td><%= fare.name %></td>
        <td><%= fare.price %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_fare_path(fare), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      fare_path(fare),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Â¿Seguro que desea eliminarlo por permanentemente de la base de datos?')) },
                      :class => 'btn btn-default btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_fare_path,
            :class => 'btn btn-default btn-primary' %>
