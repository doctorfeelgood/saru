<%= form_for @shift, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :period_id, 'ID', :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :period_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :type, 'Tipo', :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :type, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :shift_total, 'Turno total', :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :shift_total, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :partner_earnings, 'Ganancias', :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :partner_earnings, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :day, 'DÃ­a', :class => 'control-label' %>
    <div class="controls">
      <%= f.date_select :day, :class => 'date_select' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit 'Crear', :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                shifts_path, :class => 'btn' %>
  </div>
<% end %>
