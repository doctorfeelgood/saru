<%- model_class = BusEntryVoucher -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:voucher_id) %></th>
      <th><%= model_class.human_attribute_name(:bus_entry_id) %></th>
      <th><%= model_class.human_attribute_name(:amount) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @bus_entry_vouchers.each do |bus_entry_voucher| %>
      <tr>
        <td><%= link_to bus_entry_voucher.id, bus_entry_voucher_path(bus_entry_voucher) %></td>
        <td><%= bus_entry_voucher.voucher_id %></td>
        <td><%= bus_entry_voucher.bus_entry_id %></td>
        <td><%= bus_entry_voucher.amount %></td>
        <td><%=l bus_entry_voucher.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_bus_entry_voucher_path(bus_entry_voucher), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      bus_entry_voucher_path(bus_entry_voucher),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_bus_entry_voucher_path,
            :class => 'btn btn-primary' %>
