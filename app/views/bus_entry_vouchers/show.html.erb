<%- model_class = BusEntryVoucher -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:voucher_id) %>:</strong></dt>
  <dd><%= @bus_entry_voucher.voucher_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:bus_entry_id) %>:</strong></dt>
  <dd><%= @bus_entry_voucher.bus_entry_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:amount) %>:</strong></dt>
  <dd><%= @bus_entry_voucher.amount %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              bus_entry_vouchers_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_bus_entry_voucher_path(@bus_entry_voucher), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              bus_entry_voucher_path(@bus_entry_voucher),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
