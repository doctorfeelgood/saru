<%- model_class = Partner -%>
<div class="page-header">
  <h1> Socios </h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th> ID </th>
      <th> Nombre </th>
      <th> Apellidos </th>
      <th> Direcci&oacute;n </th>
      <th> Tel&eacute;fono </th>
      <th> Correo </th>
      <th> R.F.C </th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @partners.each do |partner| %>
      <tr>
        <td><%= link_to partner.id, partner_path(partner) %></td>
        <td><%= partner.first_name %></td>
        <td><%= partner.last_name %></td>
        <td><%= partner.address %></td>
        <td><%= partner.phone_number %></td>
        <td><%= partner.email %></td>
        <td><%= partner.rfc %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_partner_path(partner), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      partner_path(partner),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Â¿Seguro que desea eliminarlo permanentemente de la base de datos?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_partner_path,
            :class => 'btn btn-primary' %>