<%= form_for @operator, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :employee_number, 'Número de empleado', :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :employee_number, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :first_name, 'Nombre', :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :first_name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :last_name, 'Apellidos', :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :last_name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :address, 'Dirección', :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :address, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :phone_number, 'Número telefónico', :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :phone_number, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :email, 'Correo electrónico', :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :email, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit 'Agregar', :class => 'btn btn-default btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                operators_path, :class => 'btn btn-default' %>
  </div>
<% end %>
