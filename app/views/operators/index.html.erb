<%- model_class = Operator -%>
<div class="page-header">
  <h1> Operadores </h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th> No. de empleado </th>
      <th> Nombre </th>
      <th> Apellidos </th>
      <th> Direcci&oacute;n </th>
      <th> Tel&eacute;fono </th>
      <th> Correo </th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @operators.each do |operator| %>
      <tr>
        <td><%= operator.employee_number %></td>
        <td><%= operator.first_name %></td>
        <td><%= operator.last_name %></td>
        <td><%= operator.address %></td>
        <td><%= operator.phone_number %></td>
        <td><%= operator.email %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_operator_path(operator), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      operator_path(operator),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Â¿Seguro que desea eliminarlo permanentemente de la base de datos?')) },
                      :class => 'btn btn-default btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_operator_path,
            :class => 'btn btn-default btn-primary' %>
