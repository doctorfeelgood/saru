<%= form_for @period, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :period_number, 'Período', :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :period_number, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :beginning_date, 'Fecha inicial', :class => 'control-label' %>
    <div class="controls">
      <%= f.date_select :beginning_date, :class => 'date_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :end_date, 'Fecha final', :class => 'control-label' %>
    <div class="controls">
      <%= f.date_select :end_date, :class => 'date_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :duration, 'Duración', :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :duration, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :status, 'Estatus', :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :status, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :file_name, 'Nombre de archivo', :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :file_name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :total, 'Total', :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :total, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :diesel_total, 'Diésel total', :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :diesel_total, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :ledger_account, 'Cuenta contable', :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :ledger_account, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit 'Crear', :class => 'btn btn-default btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                periods_path, :class => 'btn btn-default' %>
  </div>
<% end %>
