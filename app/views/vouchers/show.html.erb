<%- model_class = Voucher -%>
<div class="page-header">
  <h1> Boletos </h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @voucher.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:descriptions) %>:</strong></dt>
  <dd><%= @voucher.descriptions %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              vouchers_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_voucher_path(@voucher), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              voucher_path(@voucher),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Â¿Seguro que desea eliminarlo permanentemente de la base de datos?')) },
              :class => 'btn btn-danger' %>
</div>
